<div align="center" class="wrapper">
<form class="shadow">
  <div class="form-header">
    Login
  </div>

  <div class="errors">
  </div>

  <div class="form-body">
    <input type="text" placeholder="you@domain.com" id="email">
    <input type="password" placeholder="Password" id="password">

